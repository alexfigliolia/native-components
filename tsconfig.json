{
  "tsx": {
    "typeCheck": false,
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "Node"
    }
  },
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "module": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "Authentication/*": [
        "./Authentication/*"
      ],
      "Components/*": [
        "./Components/*"
      ],
      "Generics/*": [
        "./Generics/*"
      ],
      "GQL/*": [
        "./GQL/*"
      ],
      "Hooks/*": [
        "./Hooks/*"
      ],
      "Icons/*": [
        "./Icons/*"
      ],
      "Images/*": [
        "./Images/*"
      ],
      "Layouts/*": [
        "./Layouts/*"
      ],
      "Models/*": [
        "./Models/*"
      ],
      "Pages/*": [
        "./Pages/*"
      ],
      "Root/*": [
        "./Root/*"
      ],
      "Routes/*": [
        "./Routes/*"
      ],
      "State/*": [
        "./State/*"
      ],
      "Styles/*": [
        "./Styles/*"
      ],
      "Tools/*": [
        "./Tools/*"
      ],
      "Types/*": [
        "./Types/*"
      ]
    }
  },
  "include": [
    "src",
    "ci",
    "cd",
    ".eslintrc.js",
    "**/*.json",
    "**/*.ts",
    "**/*.js"
  ],
  "exclude": [
    "__Stealth__",
    "coverage",
    "dist",
    "node_modules"
  ]
}